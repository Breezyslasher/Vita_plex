<?xml version="1.0" encoding="utf-8"?>
<brls:Box
    width="100%"
    height="100%"
    axis="column"
    justifyContent="center"
    alignItems="center"
    paddingTop="50"
    paddingBottom="50"
    paddingLeft="100"
    paddingRight="100">

    <!-- Title -->
    <brls:Label
        id="login/title"
        text="VitaPlex"
        fontSize="36"
        marginBottom="40"/>

    <!-- Input container -->
    <brls:Box
        id="login/input_container"
        width="400"
        axis="column"
        alignItems="stretch"
        marginBottom="30">

        <!-- Server URL -->
        <brls:Label
            id="login/server_label"
            text="Server: Not set"
            fontSize="18"
            marginBottom="15"
            focusable="true"/>

        <!-- Username -->
        <brls:Label
            id="login/username_label"
            text="Username: Not set"
            fontSize="18"
            marginBottom="15"
            focusable="true"/>

        <!-- Password -->
        <brls:Label
            id="login/password_label"
            text="Password: Not set"
            fontSize="18"
            marginBottom="30"
            focusable="true"/>

    </brls:Box>

    <!-- Buttons -->
    <brls:Box
        axis="row"
        justifyContent="center"
        marginBottom="30">

        <brls:Button
            id="login/login_button"
            text="Login"
            width="180"
            marginRight="20"/>

        <brls:Button
            id="login/pin_button"
            text="Use PIN"
            width="180"/>

    </brls:Box>

    <!-- PIN Code display -->
    <brls:Label
        id="login/pin_code"
        text=""
        fontSize="48"
        marginBottom="20"/>

    <!-- Status message -->
    <brls:Label
        id="login/status"
        text=""
        fontSize="16"/>

</brls:Box>
