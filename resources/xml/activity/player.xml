<?xml version="1.0" encoding="utf-8"?>
<brls:Box
    id="player/container"
    width="100%"
    height="100%"
    axis="column"
    justifyContent="flexEnd"
    alignItems="stretch"
    padding="20">

    <!-- Photo display area (for photos) -->
    <brls:Image
        id="player/photo"
        width="100%"
        height="100%"
        scalingType="fit"
        visibility="gone"
        grow="1"/>

    <!-- Video display area -->
    <vitaplex:VideoView
        id="player/video"
        width="100%"
        height="100%"
        visibility="gone"
        grow="1"/>

    <!-- Album art for music (centered above controls) -->
    <brls:Box
        width="100%"
        grow="1"
        axis="column"
        justifyContent="center"
        alignItems="center">
        <brls:Image
            id="player/album_art"
            width="200"
            height="200"
            scalingType="fit"
            cornerRadius="8"
            visibility="gone"/>
    </brls:Box>

    <!-- Controls overlay -->
    <brls:Box
        id="player/controls"
        width="100%"
        axis="column"
        alignItems="stretch"
        padding="15"
        backgroundColor="#80000000"
        cornerRadius="8">

        <!-- Title -->
        <brls:Label
            id="player/title"
            text="Now Playing"
            fontSize="20"
            marginBottom="5"/>

        <!-- Artist (for music) -->
        <brls:Label
            id="player/artist"
            text=""
            fontSize="16"
            textColor="#AAAAAA"
            marginBottom="10"
            visibility="gone"/>

        <!-- Queue info (track X of Y, shuffle/repeat status) -->
        <brls:Label
            id="player/queue_info"
            text=""
            fontSize="12"
            textColor="#888888"
            marginBottom="10"
            visibility="gone"/>

        <!-- Progress slider -->
        <brls:Slider
            id="player/progress"
            width="100%"
            height="30"
            marginBottom="10"/>

        <!-- Time display -->
        <brls:Label
            id="player/time"
            text="00:00 / 00:00"
            fontSize="14"
            horizontalAlign="center"/>

    </brls:Box>

</brls:Box>
