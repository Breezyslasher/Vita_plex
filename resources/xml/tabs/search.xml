<?xml version="1.0" encoding="utf-8"?>
<brls:Box
    width="100%"
    height="100%"
    axis="column"
    padding="20">
    <!-- Title -->
    <brls:Label
        id="search/title"
        text="Search"
        fontSize="28"
        marginBottom="20"/>
    <!-- Search input -->
    <brls:Label
        id="search/input"
        text="Tap to search..."
        fontSize="20"
        marginBottom="20"
        focusable="true"/>
    <!-- Results label -->
    <brls:Label
        id="search/results_label"
        text=""
        fontSize="16"
        marginBottom="10"/>
    <!-- Results grid -->
    <brls:ScrollingFrame
        id="search/results"
        grow="1"
        width="100%"/>
</brls:Box>
