<?xml version="1.0" encoding="utf-8"?>
<brls:Box
    width="100%"
    height="100%"
    axis="row"
    padding="30">
    <!-- Left side - Poster -->
    <brls:Box
        axis="column"
        width="200"
        marginRight="30">
        <brls:Image
            id="detail/poster"
            width="200"
            height="300"
            scalingType="fit"/>
        <brls:Button
            id="detail/play_button"
            text="Play"
            width="200"
            marginTop="20"/>
        <brls:Button
            id="detail/resume_button"
            text="Resume"
            width="200"
            marginTop="10"/>
    </brls:Box>
    <!-- Right side - Details -->
    <brls:Box
        axis="column"
        grow="1">
        <brls:Label
            id="detail/title"
            text="Title"
            fontSize="26"
            marginBottom="10"/>
        <brls:Box
            axis="row"
            marginBottom="15">
            <brls:Label
                id="detail/year"
                text=""
                fontSize="16"
                marginRight="15"/>
            <brls:Label
                id="detail/rating"
                text=""
                fontSize="16"
                marginRight="15"/>
            <brls:Label
                id="detail/duration"
                text=""
                fontSize="16"/>
        </brls:Box>
        <brls:Label
            id="detail/summary"
            text=""
            fontSize="16"
            marginBottom="20"/>
        <!-- Children container -->
        <brls:Label
            id="detail/children_label"
            text=""
            fontSize="20"
            marginBottom="10"/>
        <brls:Box
            id="detail/children"
            axis="row"
            height="180"/>
    </brls:Box>
</brls:Box>
